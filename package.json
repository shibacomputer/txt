{
  "name": "txt",
  "version": "0.0.1",
  "description": "Simple, secure journalling",
  "main": "index.js",
  "scripts": {
    "setup": "npm install && npm run rebuild && npm run spriteify",
    "start": "NODE_ENV=development && electron .",
    "spriteify": "svgo -f assets/gfx && spritesh --input assets/gfx --output icons.svg --viewbox '0 0 24 24' --prefix txt-",
    "rebuild": "electron-rebuild -f -w keytar"

  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/helveticade/txt.git"
  },
  "keywords": [
    "text",
    "journalling",
    "electron",
    "privacy"
  ],
  "author": "Cade <cade@shiba.computer>",
  "bugs": {
    "url": "https://github.com/helveticade/txt/issues"
  },
  "homepage": "https://txtapp.io/",
  "browser": {
    "openpgp": "openpgp/dist/openpgp.worker.min.js"
  },
  "dependencies": {
    "choo": "^4.1.0",
    "choo-log": "^3.0.1",
    "electron-settings": "^2.2.2",
    "electron-window": "^0.8.1",
    "keytar": "^3.0.2",
    "mime": "^1.3.4",
    "nanocomponent": "^2.0.0",
    "openpgp": "^2.3.7",
    "quill": "^1.2.0",
    "rimraf": "^2.6.1",
    "sheetify": "6.0.0",
    "tachyons": "^4.6.2",
    "yo-css": "^1.1.0"
  },
  "devDependencies": {
    "browserify": "^13.3.0",
    "budo": "^9.4.7",
    "devtron": "^1.4.0",
    "electron": "^1.4.14",
    "electron-packager": "^8.5.0",
    "electron-rebuild": "^1.5.7",
    "gulp": "^3.9.1",
    "spritesh": "^1.2.0",
    "svgo": "^0.7.2"
  },
  "build": {
    "appId": "com.shibacomputer.txt",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "contents": [
        {
          "x": 220,
          "y": 200
        },
        {
          "x": 448,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
