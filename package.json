{
  "name": "txt",
  "version": "0.0.1",
  "description": "Simple, secure journalling",
  "main": "app/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "set DEV=true && concurrently --kill-others \"npm start\"",
    "test": "mocha tests && npm run lint",
    "lint": "standard | snazzy"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/helveticade/txt.git"
  },
  "keywords": [
    "text",
    "journalling",
    "electron",
    "privacy"
  ],
  "author": "Cade <cade@shiba.computer>",
  "bugs": {
    "url": "https://github.com/helveticade/txt/issues"
  },
  "homepage": "https://txtapp.io/",
  "dependencies": {
    "choo-log": "^3.0.0",
    "choo-md-editor": "^0.1.0",
    "choo-persist": "^2.0.1",
    "electron-updater": "^1.6.1",
    "electron-window": "^0.8.1",
    "nanomorph": "^2.1.3",
    "open": "0.0.5",
    "run-waterfall": "^1.1.3",
    "sheet-router": "^4.2.3",
    "toiletdb": "^1.2.1"
  },
  "devDependencies": {
    "browserify": "^13.3.0",
    "choo-test": "0.0.5",
    "concurrently": "^3.2.0",
    "devtron": "^1.4.0",
    "electron": "^1.4.14",
    "electron-packager": "^8.5.0",
    "mochify": "^2.18.1"
  },
  "build": {
    "appId": "com.shibacomputer.txt",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "contents": [
        {
          "x": 220,
          "y": 200
        },
        {
          "x": 448,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
