{
  "name": "txt",
  "version": "0.0.1",
  "description": "Simple, secure journalling",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "watch": "watchify index.js -o bundle.js --debug --verbose",
    "dev": "NODE_ENV=development && concurrently \"npm start\""
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/helveticade/txt.git"
  },
  "keywords": [
    "text",
    "journalling",
    "electron",
    "privacy"
  ],
  "author": "Cade <cade@shiba.computer>",
  "bugs": {
    "url": "https://github.com/helveticade/txt/issues"
  },
  "homepage": "https://txtapp.io/",
  "dependencies": {
    "electron-window": "^0.8.1",
    "envobj": "^1.0.3"
  },
  "devDependencies": {
    "browserify": "^13.3.0",
    "budo": "^9.4.7",
    "concurrently": "^3.2.0",
    "devtron": "^1.4.0",
    "electron": "^1.4.14",
    "electron-packager": "^8.5.0",
    "mochify": "^2.18.1"
  },
  "build": {
    "appId": "com.shibacomputer.txt",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "contents": [
        {
          "x": 220,
          "y": 200
        },
        {
          "x": 448,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
