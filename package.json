{
  "name": "txt",
  "version": "0.0.1",
  "description": "Simple, secure journalling",
  "main": "index.js",
  "scripts": {
    "setup": "npm install && npm run rebuild && npm run spriteify",
    "start": "NODE_ENV=development && electron .",
    "spriteify": "svgo -f assets/gfx && spritesh --input assets/gfx --output icons.svg --prefix txt- removeViewBox",
    "rebuild": "electron-rebuild -f -w keytar"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/shibacomputer/txt.git"
  },
  "keywords": [
    "text",
    "journalling",
    "electron",
    "privacy"
  ],
  "author": "Cade <cade@shiba.computer>",
  "bugs": {
    "url": "https://github.com/helveticade/txt/issues"
  },
  "homepage": "https://txtapp.io/",
  "browser": {
    "openpgp": "openpgp/dist/openpgp.worker.min.js"
  },
  "dependencies": {
    "choo": "^5.1.0",
    "choo-expose": "^1.2.0",
    "choo-log": "^6.0.0",
    "choo-persist": "^3.0.1",
    "dir-to-json": "git://github.com/shibacomputer/dir-to-json.git",
    "electron": "^1.7.1",
    "electron-settings": "^3.1.1",
    "electron-window": "^0.8.1",
    "globalize": "^1.2.3",
    "keytar": "^3.0.2",
    "microframe": "^1.0.0",
    "mime": "^1.3.4",
    "mousetrap": "^1.6.1",
    "nanocomponent": "^3.0.2",
    "nanologger": "^1.0.2",
    "on-load": "^3.2.0",
    "openpgp": "^2.5.3",
    "pell": "^0.7.0",
    "sheetify": "6.0.0",
    "trash": "^4.0.1"
  },
  "devDependencies": {
    "browserify": "^13.3.0",
    "budo": "^9.4.7",
    "devtron": "^1.4.0",
    "electron": "^1.4.6",
    "electron-packager": "^8.5.0",
    "electron-rebuild": "^1.5.7",
    "spritesh": "^1.2.0",
    "svgo": "^0.7.2"
  },
  "build": {
    "appId": "com.shibacomputer.txt",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "contents": [
        {
          "x": 220,
          "y": 200
        },
        {
          "x": 448,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
